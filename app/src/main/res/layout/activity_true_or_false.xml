<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.anroid_quiz_game.TrueOrFalseActivity"
    android:orientation="vertical"
    android:background="@drawable/true_false_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/banner_difficult"
            android:id="@+id/tofLevelImageView"
            android:layout_centerInParent="true"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textAlignment="center"
                android:id="@+id/tofScoreTextView"
                android:background="@drawable/score"
                android:gravity="center_vertical"
                android:layout_centerInParent="true"
                android:paddingLeft="25dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0/0"
                android:textAlignment="center"
                android:id="@+id/tofNumQuestionTextView"
                android:background="@drawable/question"
                android:gravity="center_vertical"
                android:layout_centerInParent="true"
                android:paddingLeft="25dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0:00"
                android:textAlignment="center"
                android:id="@+id/tofTimerTextView"
                android:background="@drawable/timer"
                android:gravity="center_vertical"
                android:layout_centerInParent="true"
                android:paddingLeft="25dp"/>
        </RelativeLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tofPauseButton"
            android:background="@drawable/pause"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:background="@drawable/banner_correct"
            android:id="@+id/tofResultImageView"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=""
            android:gravity="center"
            android:textAlignment="center"
            android:layout_marginLeft="50dp"
            android:id="@+id/tofQuestionTextView"
            android:layout_weight="1"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" > "
            android:id="@+id/tofNextButton"
            android:onClick="tofNextButton_Click"
            android:background="@drawable/next"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text=" TRUE "
            android:layout_marginRight="20dp"
            android:id="@+id/tofTrueButton"
            android:onClick="tofTrueButton_Click"
            android:background="@drawable/button_background"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text=" FALSE "
            android:layout_marginLeft="20dp"
            android:id="@+id/tofFalseButton"
            android:onClick="tofFalseButton_Click"
            android:background="@drawable/button_background"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text=""
            android:textAlignment="center"
            android:id="@+id/tofTriviaTextView"
            android:layout_weight="1"
            android:layout_gravity="top"
            android:background="@drawable/banner_correct_trivia"/>
    </LinearLayout>
</LinearLayout>
